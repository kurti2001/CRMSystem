@* File: Views/Home/Index.cshtml *@

@using CRMSystem.Models
@using System.Security.Claims

@{
    ViewData["Title"] = "Dashboard";
    var leadCount = (int)ViewBag.LeadCount;
    var opportunityCount = (int)ViewBag.OpportunityCount;
    var customerCount = (int)ViewBag.CustomerCount;
    var totalContacts = (int)ViewBag.TotalContacts;
    var recentContacts = (List<Contact>)ViewBag.RecentContacts;
    var recentNotes = (List<Note>)ViewBag.RecentNotes;
    var isManager = (bool)ViewBag.IsManager;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Dashboard</h1>
    <a asp-controller="Contacts" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> New Contact
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-1">Total Contacts</h6>
                        <h2 class="mb-0">@totalContacts</h2>
                    </div>
                    <i class="bi bi-people fs-1 opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0 text-white-50">
                All contacts
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <a asp-controller="Contacts" asp-action="Leads" class="text-decoration-none">
            <div class="card text-white bg-info shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1">Leads</h6>
                            <h2 class="mb-0">@leadCount</h2>
                        </div>
                        <i class="bi bi-funnel fs-1 opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 text-white-50">
                    View all leads
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3">
        <a asp-controller="Contacts" asp-action="Opportunities" class="text-decoration-none">
            <div class="card text-white bg-warning shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1 text-dark">Opportunities</h6>
                            <h2 class="mb-0 text-dark">@opportunityCount</h2>
                        </div>
                        <i class="bi bi-graph-up fs-1 opacity-50 text-dark"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 text-dark opacity-75">
                    View all opportunities
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3">
        <a asp-controller="Contacts" asp-action="Customers" class="text-decoration-none">
            <div class="card text-white bg-success shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1">Customers</h6>
                            <h2 class="mb-0">@customerCount</h2>
                        </div>
                        <i class="bi bi-trophy fs-1 opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 text-white-50">
                    View all customers
                </div>
            </div>
        </a>
    </div>
</div>

<div class="row">
    <!-- Recent Contacts -->
    <div class="col-lg-7 mb-4">
        <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Contacts</h5>
            </div>
            <div class="card-body p-0">
                @if (recentContacts.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Company</th>
                                    <th>Status</th>
                                    @if (isManager)
                                    {
                                        <th>Assigned To</th>
                                    }
                                    <th>Updated</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var contact in recentContacts)
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Contacts" asp-action="Details"
                                               asp-route-id="@contact.ContactId" class="text-decoration-none fw-semibold">
                                                @contact.FullName
                                            </a>
                                        </td>
                                        <td>@(contact.Company ?? "—")</td>
                                        <td>
                                            <span class="badge
                                                        @(contact.ContactStatus?.Name == "Lead" ? "bg-info" :
                                                                                                    contact.ContactStatus?.Name == "Opportunity" ? "bg-warning text-dark" :
                                                                                                    "bg-success")">
                                        @contact.ContactStatus?.Name
                                    </span>
                                </td>
                                @if (isManager)
                                        {
                                            <td>@contact.AssignedTo?.FullName</td>
                                        }
                                        <td>
                                            <small class="text-muted">@contact.UpdatedAt.ToString("MMM dd, yyyy")</small>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-3 text-muted">No contacts yet.</div>
                }
            </div>
        </div>
    </div>

    <!-- Recent Notes -->
    <div class="col-lg-5 mb-4">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">Recent Notes</h5>
            </div>
            <div class="card-body">
                @if (recentNotes.Any())
                {
                    @foreach (var note in recentNotes)
                    {
                        <div class="border-bottom pb-3 mb-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <a asp-controller="Contacts" asp-action="Details"
                                   asp-route-id="@note.ContactId" class="text-decoration-none fw-semibold">
                                    @note.Contact?.FullName
                                </a>
                                <small class="text-muted">@note.CreatedAt.ToString("MMM dd")</small>
                            </div>
                            <p class="mb-1 mt-1 text-truncate" style="max-width: 100%;">
                                @note.Content
                            </p>
                            <small class="text-muted">by @note.Author?.FullName</small>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted mb-0">No notes yet.</p>
                }
            </div>
        </div>
    </div>
</div>
