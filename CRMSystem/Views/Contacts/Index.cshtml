@model List<CRMSystem.Models.Contact>

@{
    ViewData["Title"] = ViewData["Title"] ?? "Contacts";
    var statusName = ViewData["StatusName"] as string;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> New Contact
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        No @statusName?.ToLower()s found.
    </div>
}
else
{
    <div class="card">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Contact</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-bordered table-hover mb-0">
                    <thead class="table-info">
                        <tr>
                            <th style="width: 30px;"></th>
                            <th>Contact_first</th>
                            <th>Contact_last</th>
                            <th>Company</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Website</th>
                            <th>Status</th>
                            <th>Date_of_Initial_contact</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contact in Model)
                        {
                            var rowId = $"contact-{contact.ContactId}";
                            <tr data-bs-toggle="collapse" data-bs-target="#@rowId-notes" class="cursor-pointer">
                                <td class="text-center">
                                    <i class="bi bi-dash-lg toggle-icon"></i>
                                </td>
                                <td>@contact.FirstName</td>
                                <td>@contact.LastName</td>
                                <td>@(contact.Company ?? "-")</td>
                                <td>@(contact.Phone ?? "-")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(contact.Email))
                                    {
                                        <a href="mailto:@contact.Email">@contact.Email</a>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(contact.Website))
                                    {
                                        <a href="@contact.Website" target="_blank">@contact.Website</a>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>@contact.ContactStatus?.Name</td>
                                <td>@contact.DateOfInitialContact?.ToString("yyyy-MM-dd")</td>
                                <td class="text-center" onclick="event.stopPropagation();">
                                    <a asp-action="Details" asp-route-id="@contact.ContactId" class="btn btn-sm btn-outline-primary" title="View Details & Add Notes">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="10" class="p-0">
                                    <div class="collapse show" id="@rowId-notes">
                                        @if (contact.Notes.Any())
                                        {
                                            <div class="ms-4 me-4 my-2">
                                                <div class="card">
                                                    <div class="card-header bg-warning text-dark py-1">
                                                        <strong>notes</strong>
                                                    </div>
                                                    <div class="card-body p-0">
                                                        <table class="table table-sm table-bordered mb-0">
                                                            <thead class="table-warning">
                                                                <tr>
                                                                    <th>Date</th>
                                                                    <th>Notes</th>
                                                                    <th>Is_New_Todo</th>
                                                                    <th>Todo_Type_ID</th>
                                                                    <th>Todo_Desc_ID</th>
                                                                    <th>Todo_Due_Date</th>
                                                                    <th>Task_Status</th>
                                                                    <th>Task_Update</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var note in contact.Notes)
                                                                {
                                                                    <tr>
                                                                        <td>@note.Date.ToString("yyyy-MM-dd")</td>
                                                                        <td>@note.Content</td>
                                                                        <td>@(note.IsNewTodo ? "Yes" : "No")</td>
                                                                        <td>@(note.TodoType?.Type ?? "-")</td>
                                                                        <td>@(note.TodoDesc?.Description ?? "-")</td>
                                                                        <td>@(note.TodoDueDate?.ToString("MM/dd/yyyy h:mmtt") ?? "-")</td>
                                                                        <td>@(note.TaskStatus?.Status ?? "-")</td>
                                                                        <td>@(note.TaskUpdate ?? "-")</td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="ms-4 me-4 my-2 text-muted">
                                                <em>No notes for this contact</em>
                                            </div>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center">
            <span>Page 1 of 1</span>
            <span>View 1 - @Model.Count of @Model.Count</span>
        </div>
    </div>
}

<style>
    .cursor-pointer {
        cursor: pointer;
    }
    .cursor-pointer:hover {
        background-color: #f8f9fa;
    }
    .toggle-icon {
        transition: transform 0.2s;
    }
    tr[aria-expanded="false"] .toggle-icon {
        transform: rotate(-90deg);
    }
</style>
