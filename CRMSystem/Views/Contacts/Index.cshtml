@* File: Views/Contacts/Index.cshtml *@

@model List<CRMSystem.Models.Contact>

@{
    ViewData["Title"] = ViewData["Title"] ?? "Contacts";
    var statusName = ViewData["StatusName"] as string;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> New Contact
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        No @statusName?.ToLower()s found.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Company</th>
                    <th>Assigned To</th>
                    <th>Updated</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contact in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-route-id="@contact.ContactId" class="text-decoration-none fw-semibold">
                                @contact.FullName
                            </a>
                        </td>
                        <td>
                            <a href="mailto:@contact.Email" class="text-decoration-none">@contact.Email</a>
                        </td>
                        <td>@(contact.Phone ?? "—")</td>
                        <td>@(contact.Company ?? "—")</td>
                        <td>@contact.AssignedTo?.FullName</td>
                        <td>@contact.UpdatedAt.ToString("MMM dd, yyyy")</td>
                        <td class="text-center">
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Details" asp-route-id="@contact.ContactId"
                                   class="btn btn-outline-primary" title="Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@contact.ContactId"
                                   class="btn btn-outline-secondary" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <p class="text-muted">Showing @Model.Count @($"{statusName?.ToLower()}s")</p>

}
