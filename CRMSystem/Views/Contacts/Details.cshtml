@* File: Views/Contacts/Details.cshtml *@

@model CRMSystem.Models.Contact
@using CRMSystem.Models
@using System.Security.Claims

@{
    ViewData["Title"] = $"Details - {Model.FullName}";
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var isManager = User.IsInRole("Manager");
    var notes = Model.Notes.Where(n => n.Type == NoteType.Note).OrderByDescending(n => n.CreatedAt).ToList();
    var tasks = Model.Notes.Where(n => n.Type == NoteType.Task).OrderBy(n => n.IsCompleted).ThenBy(n => n.DueDate).ToList();
    var meetings = Model.Notes.Where(n => n.Type == NoteType.Meeting).OrderBy(n => n.IsCompleted).ThenBy(n => n.DueDate).ToList();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@Model.FullName</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ContactId" class="btn btn-outline-secondary">
            <i class="bi bi-pencil"></i> Edit
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Contact Information Card -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Contact Information</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row mb-0">
                    <dt class="col-sm-4">First Name</dt>
                    <dd class="col-sm-8">@Model.FirstName</dd>

                    <dt class="col-sm-4">Last Name</dt>
                    <dd class="col-sm-8">@Model.LastName</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">
                        <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                    </dd>

                    <dt class="col-sm-4">Phone</dt>
                    <dd class="col-sm-8">@(Model.Phone ?? "—")</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Company</dt>
                    <dd class="col-sm-8">@(Model.Company ?? "—")</dd>

                    <dt class="col-sm-4">Address</dt>
                    <dd class="col-sm-8">@(Model.Address ?? "—")</dd>

                    <dt class="col-sm-4">Assigned To</dt>
                    <dd class="col-sm-8">@Model.AssignedTo?.FullName</dd>

                    <dt class="col-sm-4">Created</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy h:mm tt")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<!-- Status Card -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Status</h5>
    </div>
    <div class="card-body">
        <div class="d-flex align-items-center">
            <span class="badge fs-6 me-3
                @(Model.ContactStatus?.Name == "Lead" ? "bg-info" :
                                    Model.ContactStatus?.Name == "Opportunity" ? "bg-warning text-dark" :
                                    "bg-success")">
                @Model.ContactStatus?.Name
            </span>

            <form asp-controller="Contacts" asp-action="ChangeStatus" method="post" class="d-inline-flex align-items-center">
                <input type="hidden" name="contactId" value="@Model.ContactId" />
                <select name="newStatusId" class="form-select form-select-sm me-2" style="width: auto;">
                    @if (Model.ContactStatus?.Name != "Lead")
                    {
                        <option value="1">Lead</option>
                    }
                    @if (Model.ContactStatus?.Name != "Opportunity")
                    {
                        <option value="2">Opportunity</option>
                    }
                    @if (Model.ContactStatus?.Name != "Customer")
                    {
                        <option value="3">Customer</option>
                    }
                </select>
                <button type="submit" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-arrow-repeat"></i> Change
                </button>
            </form>
        </div>
        <small class="text-muted d-block mt-2">
            Last updated: @Model.UpdatedAt.ToString("MMM dd, yyyy h:mm tt")
        </small>
    </div>
</div>

<!-- Add Note / Task / Meeting Form -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Add Note, Task, or Meeting</h5>
    </div>
    <div class="card-body">
        <form asp-controller="Notes" asp-action="Create" method="post">
            <input type="hidden" name="contactId" value="@Model.ContactId" />

            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="type" class="form-label">Type</label>
                    <select name="type" id="type" class="form-select" onchange="toggleDueDate()">
                        <option value="0">Note</option>
                        <option value="1">Task</option>
                        <option value="2">Meeting</option>
                    </select>
                </div>
                <div class="col-md-4" id="dueDateGroup" style="display: none;">
                    <label for="dueDate" class="form-label">Due Date</label>
                    <input type="datetime-local" name="dueDate" id="dueDate" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label for="content" class="form-label">Content</label>
                <textarea name="content" id="content" class="form-control" rows="3" maxlength="4000"
                          placeholder="Write a note, task, or meeting details..." required></textarea>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Add
            </button>
        </form>
    </div>
</div>

<!-- Tasks Section -->
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-list-task"></i> Tasks</h5>
        <span class="badge bg-secondary">@tasks.Count</span>
    </div>
    <div class="card-body">
        @if (tasks.Any())
        {
            @foreach (var task in tasks)
            {
                var isOverdue = !task.IsCompleted && task.DueDate.HasValue && task.DueDate.Value < DateTime.UtcNow;

                <div class="border rounded p-3 mb-3 @(task.IsCompleted ? "bg-light" : isOverdue ? "border-danger" : "")">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            @if (task.IsCompleted)
                            {
                                <span class="badge bg-success me-2">Completed</span>
                            }
                            else if (isOverdue)
                            {
                                <span class="badge bg-danger me-2">Overdue</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark me-2">Open</span>
                            }
                            <strong>@task.Author?.FullName</strong>
                            <small class="text-muted ms-2">
                                @task.CreatedAt.ToString("MMM dd, yyyy h:mm tt")
                            </small>
                            @if (task.DueDate.HasValue)
                            {
                                <small class="ms-2 @(isOverdue && !task.IsCompleted ? "text-danger fw-bold" : "text-muted")">
                                    Due: @task.DueDate.Value.ToString("MMM dd, yyyy h:mm tt")
                                </small>
                            }
                        </div>
                        <div class="btn-group btn-group-sm">
                            @if (!task.IsCompleted)
                            {
                                <form asp-controller="Notes" asp-action="MarkCompleted" asp-route-id="@task.NoteId" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Mark completed">
                                        <i class="bi bi-check-lg"></i>
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-controller="Notes" asp-action="Reopen" asp-route-id="@task.NoteId" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-warning" title="Reopen">
                                        <i class="bi bi-arrow-counterclockwise"></i>
                                    </button>
                                </form>
                            }
                            @if (isManager || task.AuthorId == currentUserId)
                            {
                                <form asp-controller="Notes" asp-action="Delete" asp-route-id="@task.NoteId" method="post" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this task?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                    <p class="mt-2 mb-0 @(task.IsCompleted ? "text-decoration-line-through text-muted" : "")" style="white-space: pre-line;">@task.Content</p>
                    @if (task.IsCompleted && task.CompletedAt.HasValue)
                    {
                        <small class="text-success">Completed: @task.CompletedAt.Value.ToString("MMM dd, yyyy h:mm tt")</small>
                    }
                </div>
            }
        }
        else
        {
            <p class="text-muted mb-0">No tasks yet.</p>
        }
    </div>
</div>

<!-- Meetings Section -->
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-calendar-event"></i> Meetings</h5>
        <span class="badge bg-secondary">@meetings.Count</span>
    </div>
    <div class="card-body">
        @if (meetings.Any())
        {
            @foreach (var meeting in meetings)
            {
                var isOverdue = !meeting.IsCompleted && meeting.DueDate.HasValue && meeting.DueDate.Value < DateTime.UtcNow;

                <div class="border rounded p-3 mb-3 @(meeting.IsCompleted ? "bg-light" : isOverdue ? "border-danger" : "")">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            @if (meeting.IsCompleted)
                            {
                                <span class="badge bg-success me-2">Completed</span>
                            }
                            else if (isOverdue)
                            {
                                <span class="badge bg-danger me-2">Overdue</span>
                            }
                            else
                            {
                                <span class="badge bg-info me-2">Upcoming</span>
                            }
                            <strong>@meeting.Author?.FullName</strong>
                            <small class="text-muted ms-2">
                                @meeting.CreatedAt.ToString("MMM dd, yyyy h:mm tt")
                            </small>
                            @if (meeting.DueDate.HasValue)
                            {
                                <small class="ms-2 @(isOverdue && !meeting.IsCompleted ? "text-danger fw-bold" : "text-muted")">
                                    Scheduled: @meeting.DueDate.Value.ToString("MMM dd, yyyy h:mm tt")
                                </small>
                            }
                        </div>
                        <div class="btn-group btn-group-sm">
                            @if (!meeting.IsCompleted)
                            {
                                <form asp-controller="Notes" asp-action="MarkCompleted" asp-route-id="@meeting.NoteId" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Mark completed">
                                        <i class="bi bi-check-lg"></i>
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-controller="Notes" asp-action="Reopen" asp-route-id="@meeting.NoteId" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-warning" title="Reopen">
                                        <i class="bi bi-arrow-counterclockwise"></i>
                                    </button>
                                </form>
                            }
                            @if (isManager || meeting.AuthorId == currentUserId)
                            {
                                <form asp-controller="Notes" asp-action="Delete" asp-route-id="@meeting.NoteId" method="post" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this meeting?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                    <p class="mt-2 mb-0 @(meeting.IsCompleted ? "text-decoration-line-through text-muted" : "")" style="white-space: pre-line;">@meeting.Content</p>
                    @if (meeting.IsCompleted && meeting.CompletedAt.HasValue)
                    {
                        <small class="text-success">Completed: @meeting.CompletedAt.Value.ToString("MMM dd, yyyy h:mm tt")</small>
                    }
                </div>
            }
        }
        else
        {
            <p class="text-muted mb-0">No meetings yet.</p>
        }
    </div>
</div>

<!-- Notes Section -->
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-sticky"></i> Notes</h5>
        <span class="badge bg-secondary">@notes.Count</span>
    </div>
    <div class="card-body">
        @if (notes.Any())
        {
            @foreach (var note in notes)
            {
                <div class="border rounded p-3 mb-3">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <strong>@note.Author?.FullName</strong>
                            <small class="text-muted ms-2">
                                @note.CreatedAt.ToString("MMM dd, yyyy h:mm tt")
                            </small>
                        </div>
                        @if (isManager || note.AuthorId == currentUserId)
                        {
                            <form asp-controller="Notes" asp-action="Delete" asp-route-id="@note.NoteId" method="post"
                                  onsubmit="return confirm('Are you sure you want to delete this note?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete note">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        }
                    </div>
                    <p class="mt-2 mb-0" style="white-space: pre-line;">@note.Content</p>
                </div>
            }
        }
        else
        {
            <p class="text-muted mb-0">No notes yet.</p>
        }
    </div>
</div>

<!-- Back Navigation -->
<div class="mt-3">
    @switch (Model.ContactStatus?.Name)
    {
        case "Lead":
            <a asp-action="Leads" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Leads
            </a>
            break;
        case "Opportunity":
            <a asp-action="Opportunities" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Opportunities
            </a>
            break;
        case "Customer":
            <a asp-action="Customers" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Customers
            </a>
            break;
        default:
            <a asp-action="Leads" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
            break;
    }
</div>

@section Scripts {
    <script>
        function toggleDueDate() {
            var type = document.getElementById('type').value;
            var dueDateGroup = document.getElementById('dueDateGroup');
            var dueDate = document.getElementById('dueDate');

            if (type === '1' || type === '2') {
                dueDateGroup.style.display = 'block';
                dueDate.required = true;
            } else {
                dueDateGroup.style.display = 'none';
                dueDate.required = false;
                dueDate.value = '';
            }
        }
    </script>
}
