@model CRMSystem.Models.Contact
@using CRMSystem.Models
@using System.Security.Claims

@{
    ViewData["Title"] = $"Details - {Model.FullName}";
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var isManager = User.IsInRole("Manager");
    var todos = Model.Notes.Where(n => n.IsNewTodo).OrderBy(n => n.TaskStatusId).ThenBy(n => n.TodoDueDate).ToList();
    var notes = Model.Notes.Where(n => !n.IsNewTodo).OrderByDescending(n => n.Date).ToList();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@Model.FullName</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ContactId" class="btn btn-outline-secondary">
            <i class="bi bi-pencil"></i> Edit
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Contact Information Card -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Contact Information</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row mb-0">
                    <dt class="col-sm-4">First Name</dt>
                    <dd class="col-sm-8">@Model.FirstName</dd>

                    <dt class="col-sm-4">Last Name</dt>
                    <dd class="col-sm-8">@Model.LastName</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">
                        <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                    </dd>

                    <dt class="col-sm-4">Phone</dt>
                    <dd class="col-sm-8">@(Model.Phone ?? "-")</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Company</dt>
                    <dd class="col-sm-8">@(Model.Company ?? "-")</dd>

                    <dt class="col-sm-4">Website</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.Website))
                        {
                            <a href="@Model.Website" target="_blank">@Model.Website</a>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Sales Rep</dt>
                    <dd class="col-sm-8">@(Model.SalesRep?.FullName ?? "-")</dd>

                    <dt class="col-sm-4">Created</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy h:mm tt")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<!-- Status Card -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Status</h5>
    </div>
    <div class="card-body">
        <div class="d-flex align-items-center">
            <span class="badge fs-6 me-3
                @(Model.ContactStatus?.Name == "lead" ? "bg-info" :
                  Model.ContactStatus?.Name == "proposal" ? "bg-warning text-dark" :
                  Model.ContactStatus?.Name == "customer/won" ? "bg-success" : "bg-secondary")">
                @Model.ContactStatus?.Name
            </span>

            <form asp-controller="Contacts" asp-action="ChangeStatus" method="post" class="d-inline-flex align-items-center">
                <input type="hidden" name="contactId" value="@Model.ContactId" />
                <select name="newStatusId" class="form-select form-select-sm me-2" style="width: auto;">
                    @if (Model.ContactStatus?.Name != "lead")
                    {
                        <option value="1">lead</option>
                    }
                    @if (Model.ContactStatus?.Name != "proposal")
                    {
                        <option value="2">proposal</option>
                    }
                    @if (Model.ContactStatus?.Name != "customer/won")
                    {
                        <option value="3">customer/won</option>
                    }
                </select>
                <button type="submit" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-arrow-repeat"></i> Change
                </button>
            </form>
        </div>
        <small class="text-muted d-block mt-2">
            Last updated: @Model.UpdatedAt.ToString("MMM dd, yyyy h:mm tt")
        </small>
    </div>
</div>

<!-- Add Note / Task Form -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Add Note or Task</h5>
    </div>
    <div class="card-body">
        <form asp-controller="Notes" asp-action="Create" method="post">
            <input type="hidden" name="contactId" value="@Model.ContactId" />

            <div class="row mb-3">
                <div class="col-md-3">
                    <label class="form-label">Is Task?</label>
                    <div class="form-check form-switch">
                        <input type="checkbox" name="isNewTodo" value="true" class="form-check-input" id="isNewTodo" onchange="toggleTaskFields()" />
                        <label class="form-check-label" for="isNewTodo">Create as Task</label>
                    </div>
                </div>
            </div>

            <div id="taskFields" style="display: none;">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label class="form-label">Todo Type</label>
                        <select name="todoTypeId" class="form-select" asp-items="@(ViewBag.TodoTypes as SelectList)">
                            <option value="">-- Select Type --</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Todo Description</label>
                        <select name="todoDescId" class="form-select" asp-items="@(ViewBag.TodoDescs as SelectList)">
                            <option value="">-- Select Description --</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Due Date</label>
                        <input type="datetime-local" name="todoDueDate" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label for="content" class="form-label">Content</label>
                <textarea name="content" id="content" class="form-control" rows="3" maxlength="4000"
                          placeholder="Write a note or task details..." required></textarea>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Add
            </button>
        </form>
    </div>
</div>

<!-- Tasks Section -->
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center bg-warning text-dark">
        <h5 class="mb-0"><i class="bi bi-list-task"></i> Tasks</h5>
        <span class="badge bg-dark">@todos.Count</span>
    </div>
    <div class="card-body p-0">
        @if (todos.Any())
        {
            <table class="table table-sm table-bordered mb-0">
                <thead class="table-warning">
                    <tr>
                        <th>Date</th>
                        <th>Notes</th>
                        <th>Todo_Type</th>
                        <th>Todo_Desc</th>
                        <th>Due Date</th>
                        <th>Status</th>
                        <th>Update</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in todos)
                    {
                        var isOverdue = task.TaskStatusId == 1 && task.TodoDueDate.HasValue && task.TodoDueDate < DateTime.UtcNow;
                        <tr class="@(isOverdue ? "table-danger" : task.TaskStatusId == 2 ? "table-success" : "")">
                            <td>@task.Date.ToString("yyyy-MM-dd")</td>
                            <td>@task.Content</td>
                            <td>@(task.TodoType?.Type ?? "-")</td>
                            <td>@(task.TodoDesc?.Description ?? "-")</td>
                            <td>@(task.TodoDueDate?.ToString("MM/dd/yyyy h:mmtt") ?? "-")</td>
                            <td>
                                <span class="badge @(task.TaskStatusId == 2 ? "bg-success" : "bg-warning text-dark")">
                                    @(task.TaskStatus?.Status ?? "-")
                                </span>
                            </td>
                            <td>@(task.TaskUpdate ?? "-")</td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm">
                                    @if (task.TaskStatusId == 1)
                                    {
                                        <form asp-controller="Notes" asp-action="MarkCompleted" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@task.NoteId" />
                                            <button type="submit" class="btn btn-sm btn-outline-success" title="Complete">
                                                <i class="bi bi-check-lg"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-controller="Notes" asp-action="Reopen" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@task.NoteId" />
                                            <button type="submit" class="btn btn-sm btn-outline-warning" title="Reopen">
                                                <i class="bi bi-arrow-counterclockwise"></i>
                                            </button>
                                        </form>
                                    }
                                    @if (isManager || task.SalesRepId == currentUserId)
                                    {
                                        <form asp-controller="Notes" asp-action="Delete" method="post" class="d-inline"
                                              onsubmit="return confirm('Delete this task?');">
                                            <input type="hidden" name="id" value="@task.NoteId" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted mb-0 p-3">No tasks yet.</p>
        }
    </div>
</div>

<!-- Notes Section -->
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-sticky"></i> Notes</h5>
        <span class="badge bg-secondary">@notes.Count</span>
    </div>
    <div class="card-body">
        @if (notes.Any())
        {
            @foreach (var note in notes)
            {
                <div class="border rounded p-3 mb-3">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <strong>@(note.SalesRep?.FullName ?? "Unknown")</strong>
                            <small class="text-muted ms-2">
                                @note.Date.ToString("MMM dd, yyyy h:mm tt")
                            </small>
                        </div>
                        @if (isManager || note.SalesRepId == currentUserId)
                        {
                            <form asp-controller="Notes" asp-action="Delete" method="post"
                                  onsubmit="return confirm('Delete this note?');">
                                <input type="hidden" name="id" value="@note.NoteId" />
                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        }
                    </div>
                    <p class="mt-2 mb-0" style="white-space: pre-line;">@note.Content</p>
                </div>
            }
        }
        else
        {
            <p class="text-muted mb-0">No notes yet.</p>
        }
    </div>
</div>

<!-- Back Navigation -->
<div class="mt-3">
    @switch (Model.ContactStatus?.Name)
    {
        case "lead":
            <a asp-action="Leads" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Leads
            </a>
            break;
        case "proposal":
            <a asp-action="Opportunities" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Opportunities
            </a>
            break;
        case "customer/won":
            <a asp-action="Customers" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Customers
            </a>
            break;
        default:
            <a asp-action="Leads" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
            break;
    }
</div>

@section Scripts {
    <script>
        function toggleTaskFields() {
            var checkbox = document.getElementById('isNewTodo');
            var taskFields = document.getElementById('taskFields');
            taskFields.style.display = checkbox.checked ? 'block' : 'none';
        }
    </script>
}
