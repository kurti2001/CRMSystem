@* File: Views/Contacts/Details.cshtml *@

@model CRMSystem.Models.Contact
@using System.Security.Claims

@{
    ViewData["Title"] = $"Details - {Model.FullName}";
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var isManager = User.IsInRole("Manager");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@Model.FullName</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ContactId" class="btn btn-outline-secondary">
            <i class="bi bi-pencil"></i> Edit
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Contact Information Card -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Contact Information</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row mb-0">
                    <dt class="col-sm-4">First Name</dt>
                    <dd class="col-sm-8">@Model.FirstName</dd>

                    <dt class="col-sm-4">Last Name</dt>
                    <dd class="col-sm-8">@Model.LastName</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">
                        <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                    </dd>

                    <dt class="col-sm-4">Phone</dt>
                    <dd class="col-sm-8">@(Model.Phone ?? "—")</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Company</dt>
                    <dd class="col-sm-8">@(Model.Company ?? "—")</dd>

                    <dt class="col-sm-4">Address</dt>
                    <dd class="col-sm-8">@(Model.Address ?? "—")</dd>

                    <dt class="col-sm-4">Assigned To</dt>
                    <dd class="col-sm-8">@Model.AssignedTo?.FullName</dd>

                    <dt class="col-sm-4">Created</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy h:mm tt")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<!-- Status Card -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Status</h5>
    </div>
    <div class="card-body">
        <div class="d-flex align-items-center">
            <span class="badge fs-6 me-3
                @(Model.ContactStatus?.Name == "Lead" ? "bg-info" :
                                    Model.ContactStatus?.Name == "Opportunity" ? "bg-warning text-dark" :
                                    "bg-success")">
                @Model.ContactStatus?.Name
            </span>

            <form asp-controller="Contacts" asp-action="ChangeStatus" method="post" class="d-inline-flex align-items-center">
                <input type="hidden" name="contactId" value="@Model.ContactId" />
                <select name="newStatusId" class="form-select form-select-sm me-2" style="width: auto;">
                    @if (Model.ContactStatus?.Name != "Lead")
                    {
                        <option value="1">Lead</option>
                    }
                    @if (Model.ContactStatus?.Name != "Opportunity")
                    {
                        <option value="2">Opportunity</option>
                    }
                    @if (Model.ContactStatus?.Name != "Customer")
                    {
                        <option value="3">Customer</option>
                    }
                </select>
                <button type="submit" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-arrow-repeat"></i> Change
                </button>
            </form>
        </div>
        <small class="text-muted d-block mt-2">
            Last updated: @Model.UpdatedAt.ToString("MMM dd, yyyy h:mm tt")
        </small>
    </div>
</div>

<!-- Notes Section -->
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Notes</h5>
        <span class="badge bg-secondary">@Model.Notes.Count</span>
    </div>
    <div class="card-body">
        <!-- Add Note Form -->
        <form asp-controller="Notes" asp-action="Create" method="post" class="mb-4">
            <input type="hidden" name="contactId" value="@Model.ContactId" />
            <div class="mb-2">
                <textarea name="content" class="form-control" rows="3" maxlength="4000"
                          placeholder="Write a note..." required></textarea>
            </div>
            <button type="submit" class="btn btn-sm btn-primary">
                <i class="bi bi-plus-lg"></i> Add Note
            </button>
        </form>

        @if (Model.Notes.Any())
        {
            <hr />

            @foreach (var note in Model.Notes)
            {
                <div class="border rounded p-3 mb-3">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <strong>@note.Author?.FullName</strong>
                            <small class="text-muted ms-2">
                                @note.CreatedAt.ToString("MMM dd, yyyy h:mm tt")
                            </small>
                        </div>
                        @if (isManager || note.AuthorId == currentUserId)
                        {
                            <form asp-controller="Notes" asp-action="Delete" asp-route-id="@note.NoteId" method="post"
                                  onsubmit="return confirm('Are you sure you want to delete this note?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete note">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        }
                    </div>
                    <p class="mt-2 mb-0" style="white-space: pre-line;">@note.Content</p>
                </div>
            }
        }
        else
        {
            <p class="text-muted mb-0">No notes yet.</p>
        }
    </div>
</div>

<!-- Back Navigation -->
<div class="mt-3">
    @switch (Model.ContactStatus?.Name)
    {
        case "Lead":
            <a asp-action="Leads" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Leads
            </a>
            break;
        case "Opportunity":
            <a asp-action="Opportunities" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Opportunities
            </a>
            break;
        case "Customer":
            <a asp-action="Customers" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Customers
            </a>
            break;
        default:
            <a asp-action="Leads" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
            break;
    }
</div>
