@* File: Views/Admin/AllTasks.cshtml *@

@model List<CRMSystem.Models.Note>

@{
    var showCompleted = (bool)ViewBag.ShowCompleted;
    var selectedSalesRepId = ViewBag.SelectedSalesRepId as string;
    var totalCount = (int)ViewBag.TotalCount;
    ViewData["Title"] = showCompleted ? "All Completed Tasks" : "All Open Tasks";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <div>
        @if (showCompleted)
        {
            <a asp-action="AllTasks" asp-route-salesRepId="@selectedSalesRepId" class="btn btn-outline-primary">
                <i class="bi bi-list-task"></i> Open Tasks
            </a>
        }
        else
        {
            <a asp-action="AllTasks" asp-route-showCompleted="true" asp-route-salesRepId="@selectedSalesRepId" class="btn btn-outline-secondary">
                <i class="bi bi-check2-all"></i> Completed Tasks
            </a>
        }
        <a asp-action="Dashboard" class="btn btn-outline-secondary ms-1">
            <i class="bi bi-arrow-left"></i> Dashboard
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Filter -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="AllTasks" method="get" class="row g-3 align-items-end">
            <input type="hidden" name="showCompleted" value="@showCompleted.ToString().ToLower()" />
            <div class="col-md-5">
                <label for="salesRepId" class="form-label">Filter by Sales Rep</label>
                <select name="salesRepId" id="salesRepId" class="form-select"
                        asp-items="@(ViewBag.Users as Microsoft.AspNetCore.Mvc.Rendering.SelectList)">
                    <option value="">-- All Sales Reps --</option>
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-funnel"></i> Filter
                </button>
                <a asp-action="AllTasks" asp-route-showCompleted="@showCompleted.ToString().ToLower()" class="btn btn-outline-secondary">
                    <i class="bi bi-x-lg"></i> Clear
                </a>
            </div>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(selectedSalesRepId))
{
    <div class="mb-3">
        <span class="text-muted">Active filters:</span>
        <span class="badge bg-primary ms-1">Sales Rep filtered</span>
    </div>
}

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        @if (showCompleted)
        {
            @:No completed tasks found.
        }
        else
        {
            @:No open tasks found.
        }
    </div>
}
else
{
    var currentUrl = $"{Context.Request.Path}{Context.Request.QueryString}";

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Content</th>
                    <th>Contact</th>
                    <th>Assigned To</th>
                    <th>Author</th>
                    <th>Due Date</th>
                    @if (showCompleted)
                    {
                        <th>Completed At</th>
                    }
                    else
                    {
                        <th>Status</th>
                    }
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    var isOverdue = !task.IsCompleted && task.DueDate.HasValue && task.DueDate.Value < DateTime.UtcNow;

                    <tr class="@(isOverdue ? "table-danger" : "")">
                        <td style="max-width: 280px;">
                            <span class="text-truncate d-inline-block" style="max-width: 280px;">
                                @task.Content
                            </span>
                        </td>
                        <td>
                            <a asp-controller="Contacts" asp-action="Details"
                               asp-route-id="@task.ContactId" class="text-decoration-none">
                                @task.Contact?.FullName
                            </a>
                        </td>
                        <td>@task.Contact?.AssignedTo?.FullName</td>
                        <td>@task.Author?.FullName</td>
                        <td>
                            @if (task.DueDate.HasValue)
                            {
                                <span class="@(isOverdue ? "text-danger fw-bold" : "")">
                                    @task.DueDate.Value.ToString("MMM dd, yyyy h:mm tt")
                                </span>
                                @if (isOverdue)
                                {
                                    <br />
                                    <small class="text-danger">Overdue</small>
                                }
                            }
                            else
                            {
                                <span>—</span>
                            }
                        </td>
                        @if (showCompleted)
                        {
                            <td>
                                @task.CompletedAt?.ToString("MMM dd, yyyy h:mm tt")
                            </td>
                        }
                        else
                        {
                            <td>
                                <span class="badge bg-warning text-dark">Open</span>
                            </td>
                        }
                        <td class="text-center">
                            <div class="btn-group btn-group-sm" role="group">
                                @if (!showCompleted)
                                {
                                    <form asp-controller="Notes" asp-action="MarkCompleted" asp-route-id="@task.NoteId" method="post" class="d-inline">
                                        <input type="hidden" name="returnUrl" value="@currentUrl" />
                                        <button type="submit" class="btn btn-outline-success" title="Mark completed">
                                            <i class="bi bi-check-lg"></i>
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-controller="Notes" asp-action="Reopen" asp-route-id="@task.NoteId" method="post" class="d-inline">
                                        <input type="hidden" name="returnUrl" value="@currentUrl" />
                                        <button type="submit" class="btn btn-outline-warning" title="Reopen">
                                            <i class="bi bi-arrow-counterclockwise"></i>
                                        </button>
                                    </form>
                                }
                                <a asp-controller="Contacts" asp-action="Details"
                                   asp-route-id="@task.ContactId"
                                   class="btn btn-outline-primary" title="View contact">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <form asp-controller="Notes" asp-action="Delete" asp-route-id="@task.NoteId" method="post" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this task?');">
                                    <input type="hidden" name="returnUrl" value="@currentUrl" />
                                    <button type="submit" class="btn btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <p class="text-muted">Showing @totalCount task(s)</p>
}
