@model List<CRMSystem.Models.Contact>

@{
    ViewData["Title"] = "All Contacts";
    var selectedSalesRepId = ViewBag.SelectedSalesRepId as string;
    var selectedStatus = ViewBag.SelectedStatus as string;
    var totalCount = (int)ViewBag.TotalCount;
}

<h1 class="mb-4">All Contacts</h1>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Contacts" method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="salesRepId" class="form-label">Filter by Sales Rep</label>
                <select name="salesRepId" id="salesRepId" class="form-select"
                        asp-items="@(ViewBag.Users as Microsoft.AspNetCore.Mvc.Rendering.SelectList)">
                    <option value="">-- All Sales Reps --</option>
                </select>
            </div>
            <div class="col-md-4">
                <label for="status" class="form-label">Filter by Status</label>
                <select name="status" id="status" class="form-select"
                        asp-items="@(ViewBag.Statuses as Microsoft.AspNetCore.Mvc.Rendering.SelectList)">
                    <option value="">-- All Statuses --</option>
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-funnel"></i> Filter
                </button>
                <a asp-action="Contacts" class="btn btn-outline-secondary">
                    <i class="bi bi-x-lg"></i> Clear
                </a>
            </div>
        </form>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        No contacts found matching the selected filters.
    </div>
}
else
{
    <div class="card">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Contact (@totalCount)</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-bordered table-hover mb-0">
                    <thead class="table-info">
                        <tr>
                            <th style="width: 30px;"></th>
                            <th>Contact_first</th>
                            <th>Contact_last</th>
                            <th>Company</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Website</th>
                            <th>Status</th>
                            <th>Sales Rep</th>
                            <th>Date_of_Initial_contact</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contact in Model)
                        {
                            var rowId = $"admin-contact-{contact.ContactId}";
                            <tr data-bs-toggle="collapse" data-bs-target="#@rowId-notes" class="cursor-pointer">
                                <td class="text-center">
                                    <i class="bi bi-dash-lg toggle-icon"></i>
                                </td>
                                <td>@contact.FirstName</td>
                                <td>@contact.LastName</td>
                                <td>@(contact.Company ?? "-")</td>
                                <td>@(contact.Phone ?? "-")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(contact.Email))
                                    {
                                        <a href="mailto:@contact.Email">@contact.Email</a>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(contact.Website))
                                    {
                                        <a href="@contact.Website" target="_blank">@contact.Website</a>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge
                                        @(contact.ContactStatus?.Name == "lead" ? "bg-info" :
                                          contact.ContactStatus?.Name == "proposal" ? "bg-warning text-dark" :
                                          contact.ContactStatus?.Name == "customer/won" ? "bg-success" : "bg-secondary")">
                                        @contact.ContactStatus?.Name
                                    </span>
                                </td>
                                <td>@(contact.SalesRep?.FullName ?? "-")</td>
                                <td>@contact.DateOfInitialContact?.ToString("yyyy-MM-dd")</td>
                            </tr>
                            <tr>
                                <td colspan="10" class="p-0">
                                    <div class="collapse show" id="@rowId-notes">
                                        @if (contact.Notes.Any())
                                        {
                                            <div class="ms-4 me-4 my-2">
                                                <div class="card">
                                                    <div class="card-header bg-warning text-dark py-1">
                                                        <strong>notes</strong>
                                                    </div>
                                                    <div class="card-body p-0">
                                                        <table class="table table-sm table-bordered mb-0">
                                                            <thead class="table-warning">
                                                                <tr>
                                                                    <th>Date</th>
                                                                    <th>Notes</th>
                                                                    <th>Is_New_Todo</th>
                                                                    <th>Todo_Type_ID</th>
                                                                    <th>Todo_Desc_ID</th>
                                                                    <th>Todo_Due_Date</th>
                                                                    <th>Task_Status</th>
                                                                    <th>Task_Update</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var note in contact.Notes)
                                                                {
                                                                    <tr>
                                                                        <td>@note.Date.ToString("yyyy-MM-dd")</td>
                                                                        <td>@note.Content</td>
                                                                        <td>@(note.IsNewTodo ? "Yes" : "No")</td>
                                                                        <td>@(note.TodoType?.Type ?? "-")</td>
                                                                        <td>@(note.TodoDesc?.Description ?? "-")</td>
                                                                        <td>@(note.TodoDueDate?.ToString("MM/dd/yyyy h:mmtt") ?? "-")</td>
                                                                        <td>@(note.TaskStatus?.Status ?? "-")</td>
                                                                        <td>@(note.TaskUpdate ?? "-")</td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="ms-4 me-4 my-2 text-muted">
                                                <em>No notes for this contact</em>
                                            </div>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center">
            <span>Page 1 of 1</span>
            <span>View 1 - @Model.Count of @Model.Count</span>
        </div>
    </div>
}

<style>
    .cursor-pointer {
        cursor: pointer;
    }
    .cursor-pointer:hover {
        background-color: #f8f9fa;
    }
    .toggle-icon {
        transition: transform 0.2s;
    }
    tr[aria-expanded="false"] .toggle-icon {
        transform: rotate(-90deg);
    }
</style>
