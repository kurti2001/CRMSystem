@* File: Views/Admin/Contacts.cshtml *@

@model List<CRMSystem.Models.Contact>

@{
    ViewData["Title"] = "All Contacts";
    var selectedSalesRepId = ViewBag.SelectedSalesRepId as string;
    var selectedStatus = ViewBag.SelectedStatus as string;
    var totalCount = (int)ViewBag.TotalCount;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>All Contacts</h1>
    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Contacts" method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="salesRepId" class="form-label">Filter by Sales Rep</label>
                <select name="salesRepId" id="salesRepId" class="form-select"
                        asp-items="@(ViewBag.Users as Microsoft.AspNetCore.Mvc.Rendering.SelectList)">
                    <option value="">-- All Sales Reps --</option>
                </select>
            </div>
            <div class="col-md-4">
                <label for="status" class="form-label">Filter by Status</label>
                <select name="status" id="status" class="form-select"
                        asp-items="@(ViewBag.Statuses as Microsoft.AspNetCore.Mvc.Rendering.SelectList)">
                    <option value="">-- All Statuses --</option>
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-funnel"></i> Filter
                </button>
                <a asp-action="Contacts" class="btn btn-outline-secondary">
                    <i class="bi bi-x-lg"></i> Clear
                </a>
            </div>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(selectedSalesRepId) || !string.IsNullOrEmpty(selectedStatus))
{
    <div class="mb-3">
        <span class="text-muted">Active filters:</span>
        @if (!string.IsNullOrEmpty(selectedSalesRepId))
        {
            <span class="badge bg-primary ms-1">Sales Rep filtered</span>
        }
        @if (!string.IsNullOrEmpty(selectedStatus))
        {
            <span class="badge bg-secondary ms-1">@selectedStatus</span>
        }
    </div>
}

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        No contacts found matching the selected filters.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Company</th>
                    <th>Status</th>
                    <th>Assigned To</th>
                    <th>Updated</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contact in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Contacts" asp-action="Details"
                               asp-route-id="@contact.ContactId" class="text-decoration-none fw-semibold">
                                @contact.FullName
                            </a>
                        </td>
                        <td>
                            <a href="mailto:@contact.Email" class="text-decoration-none">@contact.Email</a>
                        </td>
                        <td>@(contact.Phone ?? "—")</td>
                        <td>@(contact.Company ?? "—")</td>
                        <td>
                            <span class="badge
                                        @(contact.ContactStatus?.Name == "Lead" ? "bg-info" :
                                                                    contact.ContactStatus?.Name == "Opportunity" ? "bg-warning text-dark" :
                                                                    "bg-success")">
                        @contact.ContactStatus?.Name
                    </span>
                </td>
                <td>@contact.AssignedTo?.FullName</td>
                <td>
                    <small class="text-muted">@contact.UpdatedAt.ToString("MMM dd, yyyy")</small>
                </td>
                <td class="text-center">
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-controller="Contacts" asp-action="Details"
                           asp-route-id="@contact.ContactId"
                           class="btn btn-outline-primary" title="Details">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-controller="Contacts" asp-action="Edit"
                           asp-route-id="@contact.ContactId"
                           class="btn btn-outline-secondary" title="Edit">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </div>
                </td>
            </tr>
                        }
            </tbody>
        </table>
    </div>

    <p class="text-muted">Showing @totalCount contact(s)</p>
}
