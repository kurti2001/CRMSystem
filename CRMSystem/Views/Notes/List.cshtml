@* File: Views/Notes/List.cshtml *@

@model List<CRMSystem.Models.Note>
@using CRMSystem.Models

@{
    ViewData["Title"] = ViewData["Title"] ?? "Notes";
    var noteType = ViewData["NoteType"] as string;
    var showCompleted = ViewData["ShowCompleted"] as bool? ?? false;
    var currentUrl = $"{Context.Request.Path}{Context.Request.QueryString}";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <div>
        @if (noteType == "Task")
        {
            if (showCompleted)
            {
                <a asp-action="Tasks" class="btn btn-outline-primary">
                    <i class="bi bi-list-task"></i> Open Tasks
                </a>
            }
            else
            {
                <a asp-action="CompletedTasks" class="btn btn-outline-secondary">
                    <i class="bi bi-check2-all"></i> Completed Tasks
                </a>
            }
        }
        else if (noteType == "Meeting")
        {
            if (showCompleted)
            {
                <a asp-action="Meetings" class="btn btn-outline-primary">
                    <i class="bi bi-calendar-event"></i> Upcoming Meetings
                </a>
            }
            else
            {
                <a asp-action="CompletedMeetings" class="btn btn-outline-secondary">
                    <i class="bi bi-check2-all"></i> Completed Meetings
                </a>
            }
        }
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        @if (showCompleted)
        {
            @($"No completed {noteType?.ToLower()}s found.")
        }
        else
        {
            @($"No open {noteType?.ToLower()}s found.")
        }
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Content</th>
                    <th>Contact</th>
                    <th>Author</th>
                    <th>Due Date</th>
                    @if (showCompleted)
                    {
                        <th>Completed At</th>
                    }
                    else
                    {
                        <th>Status</th>
                    }
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var note in Model)
                {
                    var isOverdue = !note.IsCompleted && note.DueDate.HasValue && note.DueDate.Value < DateTime.UtcNow;

                    <tr class="@(isOverdue ? "table-danger" : "")">
                        <td style="max-width: 300px;">
                            <span class="text-truncate d-inline-block" style="max-width: 300px;">
                                @note.Content
                            </span>
                        </td>
                        <td>
                            <a asp-controller="Contacts" asp-action="Details"
                               asp-route-id="@note.ContactId" class="text-decoration-none">
                                @note.Contact?.FullName
                            </a>
                        </td>
                        <td>@note.Author?.FullName</td>
                        <td>
                            @if (note.DueDate.HasValue)
                            {
                                <span class="@(isOverdue ? "text-danger fw-bold" : "")">
                                    @note.DueDate.Value.ToString("MMM dd, yyyy h:mm tt")
                                </span>
                                @if (isOverdue)
                                {
                                    <br />
                                    <small class="text-danger">Overdue</small>
                                }
                            }
                            else
                            {
                                <span>—</span>
                            }
                        </td>
                        @if (showCompleted)
                        {
                            <td>
                                @note.CompletedAt?.ToString("MMM dd, yyyy h:mm tt")
                            </td>
                        }
                        else
                        {
                            <td>
                                <span class="badge bg-warning text-dark">Open</span>
                            </td>
                        }
                        <td class="text-center">
                            <div class="btn-group btn-group-sm" role="group">
                                @if (!showCompleted)
                                {
                                    <form asp-action="MarkCompleted" asp-route-id="@note.NoteId" method="post" class="d-inline">
                                        <input type="hidden" name="returnUrl" value="@currentUrl" />
                                        <button type="submit" class="btn btn-outline-success" title="Mark completed">
                                            <i class="bi bi-check-lg"></i>
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="Reopen" asp-route-id="@note.NoteId" method="post" class="d-inline">
                                        <input type="hidden" name="returnUrl" value="@currentUrl" />
                                        <button type="submit" class="btn btn-outline-warning" title="Reopen">
                                            <i class="bi bi-arrow-counterclockwise"></i>
                                        </button>
                                    </form>
                                }
                                <a asp-controller="Contacts" asp-action="Details"
                                   asp-route-id="@note.ContactId"
                                   class="btn btn-outline-primary" title="View contact">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@note.NoteId" method="post" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this?');">
                                    <input type="hidden" name="returnUrl" value="@currentUrl" />
                                    <button type="submit" class="btn btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <p class="text-muted">Showing @Model.Count @noteType?.ToLower()(s)</p>
}
