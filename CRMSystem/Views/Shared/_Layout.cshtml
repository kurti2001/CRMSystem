@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Custom CRM</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
        }

        .nav-tabs-custom {
            background-color: #0097a7;
        }

        .nav-tabs-custom .nav-link {
            color: white;
            border: none;
            border-radius: 0;
            padding: 0.75rem 1.5rem;
        }

        .nav-tabs-custom .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .nav-tabs-custom .nav-link.active {
            background-color: white;
            color: #0097a7;
        }
    </style>
</head>
<body>
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <!-- Header with CRM title -->
        <header class="bg-light py-3 border-bottom">
            <div class="container">
                <h1 class="mb-0">My Custom CRM</h1>
            </div>
        </header>

        @if (User.IsInRole("SalesRep"))
        {
            <!-- Sales Rep Navigation - Tab style matching mockup -->
            <nav class="nav-tabs-custom">
                <div class="container">
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Tasks" ? "active" : "")"
                               asp-controller="Notes" asp-action="Tasks">Tasks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Leads" ? "active" : "")"
                               asp-controller="Contacts" asp-action="Leads">Leads</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Opportunities" ? "active" : "")"
                               asp-controller="Contacts" asp-action="Opportunities">Opportunities</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Customers" ? "active" : "")"
                               asp-controller="Contacts" asp-action="Customers">Customers/Won</a>
                        </li>
                    </ul>
                </div>
            </nav>
        }
        else if (User.IsInRole("Manager"))
        {
            <!-- Manager Navigation - Tab style matching mockup -->
            <nav class="nav-tabs-custom">
                <div class="container">
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "MySalesReps" ? "active" : "")"
                               asp-controller="Admin" asp-action="MySalesReps">My Sales Reps</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Tasks" ? "active" : "")"
                               asp-controller="Admin" asp-action="Tasks">Tasks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Contacts" ? "active" : "")"
                               asp-controller="Admin" asp-action="Contacts">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Users" ? "active" : "")"
                               asp-controller="Admin" asp-action="Users">Manage Users</a>
                        </li>
                    </ul>
                </div>
            </nav>
        }

        <!-- Secondary navigation for user actions -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom py-1">
            <div class="container">
                <div class="ms-auto d-flex align-items-center">
                    <span class="me-3">
                        <i class="bi bi-person-circle"></i>
                        @User.Identity.Name
                        @if (User.IsInRole("Manager"))
                        {
                            <span class="badge bg-danger ms-1">Manager</span>
                        }
                        else if (User.IsInRole("SalesRep"))
                        {
                            <span class="badge bg-info ms-1">Sales Rep</span>
                        }
                    </span>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>
                </div>
            </div>
        </nav>
    }
    else
    {
        <!-- Non-authenticated header -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-diagram-3"></i> My Custom CRM
                </a>
            </div>
        </nav>
    }

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="bg-light text-muted py-3 mt-auto">
        <div class="container text-center">
            <small>&copy; @DateTime.Now.Year My Custom CRM. All rights reserved.</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
