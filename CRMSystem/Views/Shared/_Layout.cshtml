@* File: Views/Shared/_Layout.cshtml *@

@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRM System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        .navbar-brand {
            font-weight: 700;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="bi bi-diagram-3"></i> CRM System
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarMain" aria-controls="navbarMain"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav me-auto">
                        <!-- Both Roles: Dashboard -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>

                        <!-- Both Roles: Contacts -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-people"></i> Contacts
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Contacts" asp-action="Leads">
                                        <i class="bi bi-funnel"></i> Leads
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Contacts" asp-action="Opportunities">
                                        <i class="bi bi-graph-up"></i> Opportunities
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Contacts" asp-action="Customers">
                                        <i class="bi bi-trophy"></i> Customers
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Contacts" asp-action="Create">
                                        <i class="bi bi-plus-lg"></i> New Contact
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Both Roles: Tasks -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-list-task"></i> Tasks
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Notes" asp-action="Tasks">
                                        <i class="bi bi-clock"></i> Open Tasks
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Notes" asp-action="CompletedTasks">
                                        <i class="bi bi-check2-all"></i> Completed Tasks
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Both Roles: Meetings -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-calendar-event"></i> Meetings
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Notes" asp-action="Meetings">
                                        <i class="bi bi-calendar-check"></i> Upcoming Meetings
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Notes" asp-action="CompletedMeetings">
                                        <i class="bi bi-check2-all"></i> Completed Meetings
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Manager Only: Manager Dashboard -->
                        @if (User.IsInRole("Manager"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-clipboard-data"></i> Manager
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                            <i class="bi bi-speedometer"></i> Dashboard
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Contacts">
                                            <i class="bi bi-people-fill"></i> All Contacts
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="AllTasks">
                                            <i class="bi bi-list-check"></i> All Tasks
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <h6 class="dropdown-header">Sales Team</h6>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Users">
                                            <i class="bi bi-gear"></i> Manage Users
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Register">
                                            <i class="bi bi-person-plus"></i> Register User
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- Right Side: User Profile -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i>
                                @User.Identity.Name
                                @if (User.IsInRole("Manager"))
                                {
                                    <span class="badge bg-danger ms-1">Manager</span>
                                }
                                else if (User.IsInRole("SalesRep"))
                                {
                                    <span class="badge bg-info ms-1">SalesRep</span>
                                }
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <span class="dropdown-item-text text-muted">
                                        Signed in as <strong>@User.Identity.Name</strong>
                                    </span>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="bg-light text-muted py-3 mt-auto">
        <div class="container text-center">
            <small>&copy; @DateTime.Now.Year CRM System. All rights reserved.</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
